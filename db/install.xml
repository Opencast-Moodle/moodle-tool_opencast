<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="admin/tool/opencast/db" VERSION="2018013000" COMMENT="XMLDB file for Moodle tool/opencast"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="tool_opencast_series" COMMENT="Stores the series identifier for a course.">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="series" TYPE="char" LENGTH="36" NOTNULL="true" SEQUENCE="false"
                       COMMENT="identifier of the series"/>
                <FIELD NAME="ocinstanceid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="fk_course" TYPE="foreign-unique" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
                <KEY NAME="fk_ocinstance" TYPE="foreign" FIELDS="ocinstanceid" REFTABLE="tool_opencast_oc_instances"
                     REFFIELDS="id"/>
            </KEYS>
        </TABLE>
        <TABLE NAME="tool_opencast_oc_instances" COMMENT="Stores the available Opencast Instances">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="isvisible" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="isdefault" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
