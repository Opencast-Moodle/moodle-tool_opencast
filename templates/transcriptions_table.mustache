{{!
    @template tool_opencast/transcriptions_table

    This template renders the transcriptions table.

    Example context (json):
    {
        "list": null,
        "listhascontent": false
    }
}}
<div class="p-1">
    {{#listhascontent}}
        <table class="table table-striped" id="transcriptionstable">
            <thead>
            <tr>
                <th>
                    {{# str}}transcriptionflavor_thead, tool_opencast {{/ str}}
                </th>
                {{#hasactions}}
                    <th>
                        {{# str}}transcriptionaction_thead, tool_opencast {{/ str}}
                    </th>
                {{/hasactions}}
            </tr>
            </thead>
            <tbody>
            {{#list}}
                <tr>
                    <td>
                        {{title}}
                    </td>
                    {{#hasactions}}
                        <td width="10%">
                            {{#allowdownload}}
                                <a class="iconsmall" target="_blank"
                                   title="{{#str}} downloadtranscription, tool_opencast {{/str}}"
                                   href="{{downloadurl}}">
                                    {{#pix}} i/down, core{{/pix}}
                                </a>
                            {{/allowdownload}}
                            {{#candelete}}
                                <a class="iconsmall" title="{{#str}} deletetranscription, tool_opencast {{/str}}"
                                   href="{{deleteurl}}">
                                    {{#pix}} i/delete, core{{/pix}}
                                </a>
                            {{/candelete}}
                        </td>
                    {{/hasactions}}
                </tr>
            {{/list}}
            </tbody>
        </table>
    {{/listhascontent}}
    {{^listhascontent}}
        {{# str}}notranscription, tool_opencast {{/ str}}
    {{/listhascontent}}
</div>
{{#addnewurl}}
    <a type="button" class="btn btn-primary mt-3" id="createnewtranscription" href="{{addnewurl}}">
        {{# str}}addnewtranscription, tool_opencast {{/ str}}
    </a>
{{/addnewurl}}
